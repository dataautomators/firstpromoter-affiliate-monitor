generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Promoter {
  id           String   @id @default(cuid())
  source       String
  companyHost  String
  email        String
  password     String
  accessToken  String?
  refreshToken String?
  schedule     String? // Cron schedule (e.g., "0 0 * * *" for nightly updates)
  isEnabled    Boolean  @default(true)
  manualRun    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  userId String

  data PromoterData[]
}

model PromoterData {
  id            String   @id @default(cuid())
  promoterId    String
  promoter      Promoter @relation(fields: [promoterId], references: [id], onDelete: Cascade)
  unpaid        Int      @default(0)
  referral      Int      @default(0)
  clicks        Int      @default(0)
  customers     Int      @default(0)
  status        String   @default("SUCCESS")
  failedMessage String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
